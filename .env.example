# Compliance Agent Environment Configuration
# Copy this file to .env and customize the values for your environment

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Compliance API Server URL
# The base URL of your compliance API server
# Example: http://compliance-server:8002
# Example: https://compliance.company.com:8443
COMPLIANCE_API_URL=http://localhost:8002

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Authentication Token
# JWT token for API authentication (if required)
# Leave empty if authentication is not needed
COMPLIANCE_API_TOKEN=

# Scan Interval
# How often to run compliance scans (in seconds)
# Default: 3600 (1 hour)
# Examples:
#   1800 = 30 minutes
#   3600 = 1 hour
#   7200 = 2 hours
#   21600 = 6 hours
#   86400 = 24 hours
SCAN_INTERVAL=3600

# Default SCAP Profile
# The default security profile to use for scans
# Available profiles:
#   xccdf_org.ssgproject.content_profile_cis (CIS Benchmark)
#   xccdf_org.ssgproject.content_profile_cis_level1_server
#   xccdf_org.ssgproject.content_profile_cis_level2_server
#   xccdf_org.ssgproject.content_profile_standard
DEFAULT_PROFILE=xccdf_org.ssgproject.content_profile_cis

# Agent Health Check Port
# Port for the agent's health check endpoint
# Default: 8080
AGENT_PORT=8080

# Log Level
# Controls the verbosity of logging
# Options: DEBUG, INFO, WARNING, ERROR
# Default: INFO
LOG_LEVEL=INFO

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Container Name
# Name for the Docker container
# Default: compliance-agent
CONTAINER_NAME=compliance-agent

# Maximum Scan History
# Number of scan results to keep in memory
# Default: 100
MAX_SCAN_HISTORY=100

# API Request Timeout
# Timeout for API requests in seconds
# Default: 30
API_TIMEOUT=30

# API Retry Attempts
# Number of times to retry failed API requests
# Default: 3
API_RETRY_ATTEMPTS=3

# Scan Timeout
# Maximum time to wait for a scan to complete (in seconds)
# Default: 1800 (30 minutes)
SCAN_TIMEOUT=1800

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# TLS Verification
# Whether to verify TLS certificates for HTTPS connections
# Set to "false" only for testing with self-signed certificates
# Default: true
TLS_VERIFY=true

# Agent Identifier
# Unique identifier for this agent instance
# Leave empty to auto-generate based on hostname
AGENT_ID=

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker Network
# Network name for the container
# Default: bridge
DOCKER_NETWORK=bridge

# Memory Limit
# Maximum memory usage for the container
# Examples: 512m, 1g, 2g
# Default: 2g
MEMORY_LIMIT=2g

# CPU Limit
# CPU limit for the container (number of CPUs)
# Examples: 0.5, 1, 2
# Default: 1
CPU_LIMIT=1

# =============================================================================
# SCAP CONTENT CONFIGURATION
# =============================================================================

# SCAP Content Source
# URL or local path to SCAP content
# Default: Downloads from official SCAP Security Guide
SCAP_CONTENT_SOURCE=

# Custom SCAP Content
# Path to custom SCAP content files
# Leave empty to use default content
CUSTOM_SCAP_CONTENT=

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Enable Metrics
# Whether to expose Prometheus metrics
# Default: true
ENABLE_METRICS=true

# Metrics Port
# Port for Prometheus metrics endpoint
# Default: 9090
METRICS_PORT=9090

# Health Check Interval
# How often to perform internal health checks (seconds)
# Default: 60
HEALTH_CHECK_INTERVAL=60

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Webhook URL
# URL to send notifications about scan results
# Leave empty to disable webhooks
WEBHOOK_URL=

# Webhook Token
# Authentication token for webhook requests
WEBHOOK_TOKEN=

# Email Notifications
# SMTP configuration for email notifications
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=
SMTP_TO=

# =============================================================================
# DEVELOPMENT AND DEBUGGING
# =============================================================================

# Debug Mode
# Enable debug mode for troubleshooting
# Default: false
DEBUG_MODE=false

# Dry Run Mode
# Run scans but don't submit results to API
# Useful for testing
# Default: false
DRY_RUN=false

# Local Development
# Set to true when running in local development environment
# Default: false
LOCAL_DEV=false

# Mock OpenSCAP
# Use mock OpenSCAP commands for testing
# Default: false
MOCK_OSCAP=false

# =============================================================================
# EXAMPLE CONFIGURATIONS
# =============================================================================

# Example 1: Basic configuration for production
# COMPLIANCE_API_URL=https://compliance.company.com:8443
# COMPLIANCE_API_TOKEN=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
# SCAN_INTERVAL=7200
# LOG_LEVEL=INFO

# Example 2: Development environment
# COMPLIANCE_API_URL=http://localhost:8002
# SCAN_INTERVAL=300
# LOG_LEVEL=DEBUG
# DEBUG_MODE=true
# DRY_RUN=true

# Example 3: High-security environment
# COMPLIANCE_API_URL=https://secure-compliance.internal:8443
# COMPLIANCE_API_TOKEN=secure-token
# DEFAULT_PROFILE=xccdf_org.ssgproject.content_profile_cis_level2_server
# TLS_VERIFY=true
# SCAN_INTERVAL=1800

# Example 4: Testing environment
# COMPLIANCE_API_URL=http://test-server:8002
# SCAN_INTERVAL=60
# LOG_LEVEL=DEBUG
# MOCK_OSCAP=true
# DRY_RUN=true
